# Application Settings
APP_NAME=AION
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_EMBEDDING_MODEL=openai/text-embedding-3-small
OPENROUTER_LLM_MODEL=anthropic/claude-3.5-sonnet

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_MEMORIES=memories
QDRANT_COLLECTION_DOCUMENTS=kb_documents
QDRANT_VECTOR_SIZE=1536

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# PostgreSQL Configuration (for metadata and logs)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aion_metadata
POSTGRES_USER=aion_user
POSTGRES_PASSWORD=your_postgres_password_here

# GitHub Configuration (Obsidian Vault Sync)
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO_OWNER=your_username
GITHUB_REPO_NAME=your_obsidian_vault_repo
GITHUB_BRANCH=main
OBSIDIAN_VAULT_PATH=./obsidian_vault

# Sync Configuration
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL_HOURS=1
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Memory Configuration
MEMORY_MAX_LENGTH=150
MEMORY_RETRIEVAL_LIMIT=5
DOCUMENT_RETRIEVAL_LIMIT=10
MEMORY_CONSOLIDATION_ENABLED=true

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ENCRYPT_AT_REST=true
ENCRYPTION_KEY=your-encryption-key-change-this

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
